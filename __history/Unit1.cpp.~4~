__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void ChangeDataSource(String DBName)
{
	// Сохраняем текущую строку подключения
	String currentConnectionString = Form2->ADOConnection1->ConnectionString;

    // Новый источник данных
	String newDataSource = DBName;

    // Разделяем строку на части
    TStringList *connectionParts = new TStringList();
    connectionParts->Delimiter = ';';
    connectionParts->DelimitedText = currentConnectionString;

    // Ищем и изменяем Data Source
    for (int i = 0; i < connectionParts->Count; i++)
    {
        // Проверяем, начинается ли строка с "Data Source="
        if (Pos("Data Source=", connectionParts->Strings[i]) == 1) // Если начинается с 1
        {
            connectionParts->Strings[i] = "Data Source=" + newDataSource;
            break; // Выход из цикла, если нашли и изменили Data Source
        }
    }

    // Собираем строку подключения обратно
	Form2->ADOConnection1->ConnectionString = connectionParts->DelimitedText;

    // Освобождаем память
    delete connectionParts;

    // Также можно добавить код для открытия соединения, если это необходимо
	// ADOConnection1->Open();
}

//---------------------------------------------------------------------------
void __fastcall TForm1::Label1Click(TObject *Sender)
{
	Form6->Close();
	Form2->Parent = this;
	Form2->SetBounds(3,3,300,150);
	Form2->Align = alClient;
	Form2->BorderStyle = bsNone;
	Form2->DBGrid1->Align = alClient;
	Form2->DBGrid1->BorderStyle = bsNone;
	Form2->RadioButton1->Checked = true;
	ChangeDataSource(ComboBox1->Text);
	Form2->SearchNom->Items->Clear();
	Form2->SearchNom->Items->LoadFromFile("journal.ewe");
	Form2->Visible = true;

}
//---------------------------------------------------------------------------



void __fastcall TForm1::Label2Click(TObject *Sender)
{
    Form2->Close();
	Form6->Parent = this;
	Form6->SetBounds(3,3,300,150);
	Form6->Align = alClient;
	Form6->BorderStyle = bsNone;
	Form6->DBGrid1->Align = alClient;
	Form6->DBGrid1->BorderStyle = bsNone;
	Form6->ADOQuery1->Active = false;
	Form6->ADOQuery1->SQL->Text = "SELECT * FROM ish ORDER BY number";
	Form6->ADOQuery1->Active = true;
	Form6->StatusBar1->Panels->Items[1]->Text = Form6->ADOQuery1->RecordCount;
	Form6->Visible = true;

}
